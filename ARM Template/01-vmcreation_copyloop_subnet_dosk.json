{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
         "stgaccname": {
              "type": "string",
             "defaultValue": "demostg"
         },
         "vmpip": {
           "type": "string",
           "defaultValue": "demovmpip"

         },
         "demonsg": {

             "type": "string",
             "defaultValue": "demonsg"
         },
         "vnet": {
           "type": "string",
           "defaultValue": "demovnet"
         },
         "snet": {

             "type": "string",
             "defaultValue": "demosnet"
         },
         "demoNIC": {
           
           "type": "string",
           "defaultValue": "demo-nic"
         },
         "vmname": {
             "type": "string",
             "defaultValue": "demovm"
         },
         "computerName": {
            "type": "string",
            "defaultValue": "ARMtestVM"

         },
         "adminUsername": {

             "type": "string"
             
         },
         "adminPassword": {
                  "type": "securestring"
                 

         }




    },
    "functions": [],
    "variables": {
      "uniquestgname":"[concat(parameters('stgaccname'),uniqueString(resourceGroup().id))]"

    },
    "resources": [

        {
            "name": "[variables('uniquestgname')]",
            "type": "Microsoft.Storage/storageAccounts",
            "apiVersion": "2019-06-01",
            "location": "[resourceGroup().location]",
            "tags": {
                "displayName": "Storage Account"
            },
            "sku": {
                "name": "Standard_LRS"
            },
            "kind": "StorageV2"
        },
        {
            "name": "[parameters('vmpip')]",
            "type": "Microsoft.Network/publicIPAddresses",
            "apiVersion": "2019-11-01",
            "location": "[resourceGroup().location]",
            "tags": {
                "displayName": "PublicIPAddress"
            },
            "properties": {
                "publicIPAllocationMethod": "Dynamic",
                "dnsSettings": {
                    "domainNameLabel": "[parameters('vmpip')]"
                }
            }
        },
        {
            "name": "[parameters('demonsg')]",
            "type": "Microsoft.Network/networkSecurityGroups",
            "apiVersion": "2018-08-01",
            "location": "[resourceGroup().location]",
            "properties": {
                "securityRules": [
                    {
                        "name": "nsgRule1",
                        "properties": {
                            "description": "description",
                            "protocol": "Tcp",
                            "sourcePortRange": "*",
                            "destinationPortRange": "3389",
                            "sourceAddressPrefix": "*",
                            "destinationAddressPrefix": "*",
                            "access": "Allow",
                            "priority": 1000,
                            "direction": "Inbound"
                        }
                    }
                ]
            }
        },
        {
            "name": "[parameters('vnet')]",
            "type": "Microsoft.Network/virtualNetworks",
            "apiVersion": "2019-11-01",
            "location": "[resourceGroup().location]",
            "dependsOn": [
                "[resourceId('Microsoft.Network/networkSecurityGroups', parameters('demonsg'))]"
            ],
            "tags": {
                "displayName": "demowin3101-VirtualNetwork"
            },
            "properties": {
                "addressSpace": {
                    "addressPrefixes": [
                        "10.0.0.0/16"
                    ]
                },
                "subnets": [
                    {
                        "name": "[concat(parameters('snet'))]",
                        "properties": {
                            "addressPrefix": "10.0.0.0/24",
                            "networkSecurityGroup": {
                                "id": "[resourceId('Microsoft.Network/networkSecurityGroups', parameters('demonsg'))]"
                            }
                        }
                    }
                    
                    
                ]
            }
           
        },
       
        
        {
            "name": "[parameters('demoNIC')]",
            "type": "Microsoft.Network/networkInterfaces",
            "apiVersion": "2019-11-01",
            "location": "[resourceGroup().location]",
            "dependsOn": [
                "[resourceId('Microsoft.Network/publicIPAddresses', parameters('vmpip'))]",
                "[resourceId('Microsoft.Network/virtualNetworks', parameters('vnet'))]"
            ],
            "tags": {
                "displayName": " Network Interface Card"
            },
            "properties": {
                "ipConfigurations": [
                    {
                        "name": "ipConfig1",
                        "properties": {
                            "privateIPAllocationMethod": "Dynamic",
                            "publicIPAddress": {
                                "id": "[resourceId('Microsoft.Network/publicIPAddresses', parameters('vmpip'))]"
                            },
                            "subnet": {
                                "id": "[resourceId('Microsoft.Network/virtualNetworks/subnets', parameters('vnet'), parameters('snet'))]"
                            }
                        }
                    }
                ]
            }
        },
        {
            "name": "[parameters('vmname')]",
            "type": "Microsoft.Compute/virtualMachines",
            "apiVersion": "2019-07-01",
            "location": "[resourceGroup().location]",
            "dependsOn": [
                "[resourceId('Microsoft.Storage/storageAccounts', variables('uniquestgname'))]",
                "[resourceId('Microsoft.Network/networkInterfaces', parameters('demoNIC'))]"
            ],
            "tags": {
                "displayName": "VM NIC"
            },
            "properties": {
                "hardwareProfile": {
                    "vmSize": "Standard_D2_v2"
                },
                "osProfile": {
                    "computerName": "[parameters('computerName')]",
                    "adminUsername": "[parameters('adminUsername')]",
                    "adminPassword": "[parameters('adminPassword')]"
                },
                "storageProfile": {
                    "imageReference": {
                        "publisher": "MicrosoftWindowsServer",
                        "offer": "WindowsServer",
                        "sku": "2012-R2-Datacenter",
                        "version": "latest"
                    },
                    "osDisk": {
                        "name": "[concat(parameters('vmname'),'-disk01')]",
                        "caching": "ReadWrite",
                        "createOption": "FromImage"
                    }
                },
                "networkProfile": {
                    "networkInterfaces": [
                        {
                            "id": "[resourceId('Microsoft.Network/networkInterfaces', parameters('demoNIC'))]"
                        }
                    ]
                },
                "diagnosticsProfile": {
                    "bootDiagnostics": {
                        "enabled": true,
                        "storageUri": "[reference(resourceId('Microsoft.Storage/storageAccounts/', variables('uniquestgname'))).primaryEndpoints.blob]"
                    }
                }
            }
        }
    ],
    "outputs": {}
}